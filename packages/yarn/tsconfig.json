{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "dist",
      "resolveJsonModule": true,
      "strictNullChecks": false
  },
  "include": [
      "src/**/*",
      "assets/**/*",
  ]
}